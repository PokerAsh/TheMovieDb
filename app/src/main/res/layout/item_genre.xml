<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="16dp"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/view" app:layout_constraintEnd_toStartOf="@+id/genreView"
            android:layout_marginEnd="8dp" android:id="@+id/genreName"/>

    <View
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/gray" app:layout_constraintEnd_toStartOf="@id/genreDetail"
            android:layout_marginEnd="8dp"
            android:id="@+id/genreView" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/view" android:layout_marginTop="8dp"
            android:visibility="visible"/>

    <ImageView android:layout_width="36dp" android:layout_height="36dp"
               app:srcCompat="@drawable/ic_arrow_forward" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="8dp" android:id="@+id/genreDetail" android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
               app:layout_constraintBottom_toTopOf="@id/view" android:contentDescription="@null"/>
    <View
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@color/gray"
            android:id="@+id/view" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>